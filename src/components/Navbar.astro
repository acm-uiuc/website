---
import ReactNavbar from './generic/ReactNavbar';
import { optimizeNavbarImages } from './generic/optimizeNavbarImages';

const { transparent = false, mode = 'dark', breadcrumbs } = Astro.props;
const currentPath = Astro.url.pathname;
const { bannerWhiteSrc, bannerBlueSrc } = await optimizeNavbarImages();
---

<ReactNavbar
  currentPath={currentPath}
  transparent={transparent}
  mode={mode}
  breadcrumbs={breadcrumbs}
  bannerWhiteSrc={bannerWhiteSrc}
  bannerBlueSrc={bannerBlueSrc}
  client:load
/>
