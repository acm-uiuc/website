---
import InteractiveLayout from '../../layouts/InteractiveLayout.astro';
import NetIdSyncButton from '../../components/NetIdSyncButton';
const breadcrumbs = [{ href: '/admin/sync', label: 'Sync Identity' }];
---

<InteractiveLayout
  title="Sync Identity"
  description="Admin tool to sync Illinois NetID with ACM @ UIUC identity."
  breadcrumbs={breadcrumbs}
>
  <div class="relative z-10 w-full max-w-lg">
    <div
      class="rounded-2xl border border-gray-200 bg-white p-8 shadow-xl lg:p-10"
    >
      <div class="mb-6 text-center">
        <h1 class="text-2xl font-bold text-navy-900 lg:text-3xl">
          Sync Identity
        </h1>
        <p class="mt-2 text-gray-600">
          Use this tool to setup your account, or update your ACM account with
          details from your Illinois NetID.
        </p>
      </div>
      <div class="space-y-6">
        <NetIdSyncButton client:only="preact" />
      </div>
    </div>
  </div>
</InteractiveLayout>
