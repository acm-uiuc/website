---
import StoreWrapper from '../../components/store/StoreWrapper';
import MinimalLayout from '../../layouts/MinimalLayout.astro';
import { optimizeNavbarImages } from '../../components/generic/optimizeNavbarImages';

const currentPath = Astro.url.pathname;
const { bannerWhiteSrc, bannerBlueSrc } = await optimizeNavbarImages();
---

<MinimalLayout title="Store">
  <StoreWrapper
    client:load
    currentPath={currentPath}
    bannerWhiteSrc={bannerWhiteSrc}
    bannerBlueSrc={bannerBlueSrc}
  />
</MinimalLayout>
